{
  "name": "@consoless/transport-console",
  "version": "0.0.1",
  "description": "Consoless' transport for loggin in browser's console",
  "license": "MIT",
  "repository": "consoless/transport-console",
  "author": "Alexey Lizurchik <al.lizurchik@gmail.com> (http://likerrr.ru)",
  "engines": {
    "node": ">=6"
  },
  "man": "./README.md",
  "scripts": {
    "build": "npm run lint && webpack -p",
    "lint": "xo",
    "start": "webpack --watch",
    "test": "jest",
    "test:coverage": "npm run coverage:collect && codecov",
    "test:watch": "npm run test -- --watch",
    "coverage": "npm run test -- --coverage",
    "coverage:collect": "npm run coverage",
    "precommit": "npm run coverage && npm run build",
    "prepublish": "npm run precommit"
  },
  "files": [
    "index.js",
    "dist/bundle.umd.js"
  ],
  "browser": "dist/bundle.umd.js",
  "main": "index.js",
  "keywords": [
    "es6",
    "boilerplate",
    "browser",
    "node",
    "starter",
    "consoless-transport",
    "consoless"
  ],
  "dependencies": {
    "@consoless/core": "^0.0.1"
  },
  "devDependencies": {
    "babel-loader": "^6.4.0",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-preset-env": "^1.2.1",
    "babel-register": "^6.24.0",
    "codecov": "^2.0.1",
    "eslint": "^3.19.0",
    "eslint-plugin-jest": "^19.0.1",
    "jest": "^19.0.2",
    "webpack": "^2.3.2",
    "xo": "^0.18.1"
  },
  "xo": {
    "esnext": true,
    "semicolon": true,
    "space": 2,
    "overrides": [{
      "files": "test.js",
      "plugins": [
        "jest"
      ],
      "extends": ["plugin:jest/recommended"],
      "envs": ["jest"]
    }]
  },
  "jest": {
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 100,
        "statements": 100,
        "functions": 100,
        "branches": 100
      }
    },
    "testEnvironment": "jsdom"
  }
}
